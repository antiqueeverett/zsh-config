#!/bin/zsh

# ALIAS FUNCTIONS
function smart_diff () {
    if git diff-index --quiet HEAD --; then
        git diff HEAD^ HEAD # if changes have been committed
    else
        if git diff --exit-code; then
            git diff --cache # if changes have been introduced & staged (but not committed)
        else
            git diff # if changes been introduced but not staged
        fi
    fi
}


function pull () {
    if [[ $(git submodule foreach 'git status') ]]; then
        echo " -- found submodules!"
        echo " -- switching to recursive pull strategy"
        git submodule update --remote
        git pull --recurse-submodules
    else
        git pull
    fi
}


function push () {
    if [[ $(git submodule foreach 'git status') ]]; then
        echo " -- todo implement safety check to protect submodules!"
    else
        git push
    fi
}


# -- viewing repository status
alias ggS='git status'


# -- adding cache
alias ggA='git add .'
alias gga='git add --patch $1'


# -- viewing repository status
alias ggC='git commit -m'


# -- resetting
alias ggrH!='git reset --hard'
alias ggrS!='git reset --soft'


# -- viewing logs
alias ggl='git log'
alias ggrl='git reflog'
alias ggv='git log --pretty="format:%h %G? %aN  %s"' # verify commits are signed n.b. G=signed | N=not signed


# -- pulling
alias ggpull='pull'


# -- pushing
alias ggpush='git push'


# # -- stashing
alias ggst='git stash'


# -- checking what changed/difference
alias ggd='smart_diff'
alias ggdt='git difftool'


# -- re-basing
alias ggR='git rebase'


# -- un-staging files
alias ggcS='git restore --staged'


# -- deleting new changes (not yet staged)
alias ggc='git restore'






