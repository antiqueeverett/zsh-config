#!/bin/zsh

# -- viewing all aliases
alias aliases="{ alias; git aliases; } | sort"


# -- exporting older versions of java
# alias java11='export JAVA_HOME=$JAVA_11_HOME'


# -- listing current working directory
alias clr='clear'
alias ls='exa --git-ignore --group-directories-first -la'
alias cl='clear; exa --git-ignore --group-directories-first -la'


# -- cleaning pesky .DS_Store files
alias clean="sudo find . -type f -name '*.DS_Store' -ls -delete"

