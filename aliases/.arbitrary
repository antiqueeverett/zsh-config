#!/bin/zsh

# show * aliases
alias aliases="{ alias; git aliases; } | sort"

# clear
alias cl='clear; exa --git-ignore --group-directories-first -la'

# -- cleaning pesky .DS_Store files
alias clean="sudo find . -type f -name '*.DS_Store' -ls -delete"

# exa
alias ls='exa --git-ignore --group-directories-first -la'

# fd persistent on MacOS and Debian
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
	alias fd=fdfind
fi

# cloud compare
alias cloudc='cloudcompare.CloudCompare'

# hotspotshield
alias disc='hotspotshield disconnect'
alias conn='hotspotshield connect'

# nvim
alias vi=nvim

# tree
alias t=tree
