#!/bin/zsh

#
# sourcing .zshrc
#
function src() {
    # todo: refine function!
    mv $HOME/.zshrc $HOME/.zshrc_old
    cp $HOME/Repositories/dot-files/.zshrc  $HOME
    source ~/.zshrc
}

#
# reading *.md files locally
#
function rmd() {
    grip README.md --export
    open -a Safari README.html
    sleep 2
    rm -rf README.html
}

#
# opening *.pdf and *.md files
#
function opn() {
    FILE="$1"
    echo "-- opening $FILE"

    if [ "${FILE##*.}" = "md" ]; then
        pandoc $FILE | lynx -stdin

    elif [ "${FILE##*.}" = "pdf" ]; then
        if [[ "$OSTYPE" == "linux-gnu" ]]; then
            xdg-open "$FILE"

        elif [[ "$OSTYPE" == "darwin"* ]]; then
            open "$FILE"
        fi
    fi
}

#
# common aliases
#
alias rmd='rmd >/dev/null 2>&1'
alias src='src'
alias opn='opn'
alias e='exit'
alias c='clear'
alias lals="{ alias; git aliases; } | sort"
alias clean="sudo find . -type f -name '*.DS_Store' -ls -delete"

#
# exa aliases
#
alias ls='exa --git-ignore --group-directories-first -la'
alias cl='clear; exa --git-ignore --group-directories-first -la'

#
# git, vim, tmux, mutt, latex, and markdown specific aliases
#
source $HOME/Repositories/dot-files/git-config/.aliases
source $HOME/Repositories/dot-files/mutt-config/.aliases
source $HOME/Repositories/dot-files/vim-config/.aliases
source $HOME/Repositories/dot-files/tmux-config/.aliases
source $HOME/Repositories/dot-files/latex-config/.aliases
