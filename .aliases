#!/bin/zsh

cpus=$(getconf _NPROCESSORS_ONLN)

################################################################################
#                               SYSTEM TWEAK                                   #
################################################################################

# show * aliases
alias aliases="{ alias; git aliases; } | sort"

# clear
alias cl='clear; exa --git-ignore --group-directories-first -la'

# clean pesky .DS_Store
alias clean="sudo find . -type f -name '*.DS_Store' -ls -delete"

# exa
alias l='exa --git-ignore --group-directories-first -la'
# fd persistent on MacOS and Debian
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
	alias fd=fdfind
fi


################################################################################
#                               SHORTCUTS                                      #
################################################################################

# regular paths
alias dot='cd ~/dotfiles'
alias desk='cd ~/Desktop'
alias drop='cd ~/Dropbox'
alias down='cd ~/Downloads'

# cloud compare
alias cc='cloudcompare.CloudCompare'
alias pcl='cloudcompare.CloudCompare $HOME/Repositories/research/projects/sap/build/bin/cloud.ply >/dev/null 2>&1 &'
alias surface='cloudcompare.CloudCompare $HOME/Repositories/research/projects/sap/build/bin/plane.ply >/dev/null 2>&1 &'

# hotspotshield
alias disc='hotspotshield disconnect'
alias conn='hotspotshield connect US'

# nvim
alias vi=nvim

# tree
alias t=tree

# reseting antigen
alias ar='antigen reset'

################################################################################
#                              SCRIPT ALIASES                                  #
################################################################################

# library.bib update
alias bib='bib.sh'

# compile latex documents
alias comp='time tex.sh main.tex -j$cpus'

# build cmake project
alias build='cmake.sh -j$cpus'

