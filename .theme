#!/bin/zsh
# theme
antigen theme powerlevel9k/powerlevel9k

# source
POWERLEVEL9K_INSTALLATION_PATH="$DOTFILES_PATH/resources/external/powerlevel9k"

# mode
POWERLEVEL9K_MODE='nerdfont-complete'
# ----------------------------------------------------------------
# COLOR based on <https://github.com/morhetz/gruvbox#dark-mode-1>
# ----------------------------------------------------------------

# /etc/ icon
POWERLEVEL9K_ETC_ICON="%F{172}\uf423"
POWERLEVEL9K_DIR_ETC_BACKGROUND='clear'

# root icon
POWERLEVEL9K_FOLDER_ICON=''
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND='172'
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND='clear' # background

# home|user icon
POWERLEVEL9K_HOME_ICON="%F{208}\uf9fa"
POWERLEVEL9K_HOME_ICON_BACKGROUND='clear'

# user|directory icon
POWERLEVEL9K_HOME_SUB_ICON="%F{66}\uf752"
POWERLEVEL9K_DIR_HOME_BACKGROUND='clear' # background

# leading tilde
POWERLEVEL9K_HOME_FOLDER_ABBREVIATION=''

# directory path delimiter
POWERLEVEL9K_DIR_PATH_SEPARATOR=" %F{66}\uf0a9 "
POWERLEVEL9K_SHORTEN_DELIMITER="%F{172}…%F{172}"

# path
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND='172'
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND='clear' # background

# forbidden directory lock icon
POWERLEVEL9K_DIR_WRITABLE_FORBIDDEN_FOREGROUND='215'
POWERLEVEL9K_DIR_WRITABLE_FORBIDDEN_BACKGROUND='clear'

# next line connecting icon
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX=''

# cursor
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX=" %F{66}\uf101 "


# directory path and subversion segment delimiter
POWERLEVEL9K_LEFT_SUBSEGMENT_SEPARATOR="%F{66}\uf0a9 "


POWERLEVEL9K_SHORTEN_DELIMITER="%F{66} \ufcc1%F{66}"
POWERLEVEL9K_SHORTEN_DIR_LENGTH=2

# git icon
POWERLEVEL9K_VCS_GIT_ICON="\uf408 "

# github icon
POWERLEVEL9K_VCS_GIT_GITHUB_ICON="\uf408 "

# git SHA-1 hash
POWERLEVEL9K_SHOW_CHANGESET=true
POWERLEVEL9K_CHANGESET_HASH_LENGTH=6

# git-state icons
POWERLEVEL9K_VCS_UNTRACKED_ICON=●
POWERLEVEL9K_VCS_UNSTAGED_ICON=±
POWERLEVEL9K_VCS_INCOMING_CHANGES_ICON=↓
POWERLEVEL9K_VCS_OUTGOING_CHANGES_ICON=↑
POWERLEVEL9K_VCS_CLEAN_FOREGROUND='106'
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND='172'
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND='167'
POWERLEVEL9K_VCS_CLEAN_BACKGROUND='clear'
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND='clear'
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND='clear'

# exit status icon
POWERLEVEL9K_STATUS_VERBOSE=false
POWERLEVEL9K_STATUS_OK_ICON="\uf633"
POWERLEVEL9K_STATUS_ERROR_ICON="\uf165"
POWERLEVEL9K_STATUS_ERROR_CR_ICON="\uf165"
POWERLEVEL9K_STATUS_ERROR_BACKGROUND='clear'
POWERLEVEL9K_STATUS_ERROR_FOREGROUND='88'
POWERLEVEL9K_STATUS_OK_BACKGROUND='clear'
POWERLEVEL9K_STATUS_OK_FOREGROUND='100'
POWERLEVEL9K_STATUS_BACKGROUND='clear'

# execution time
POWERLEVEL9K_EXECUTION_TIME_ICON="\ufa1a"
POWERLEVEL9K_COMMAND_EXECUTION_TIME_THRESHOLD=0
POWERLEVEL9K_COMMAND_EXECUTION_TIME_FOREGROUND='239'
POWERLEVEL9K_COMMAND_BACKGROUND_JOBS_FOREGROUND='239'
POWERLEVEL9K_COMMAND_EXECUTION_TIME_BACKGROUND='clear'
POWERLEVEL9K_COMMAND_BACKGROUND_JOBS_BACKGROUND='clear'

# load icon
POWERLEVEL9K_LOAD_NORMAL_FOREGROUND='239'
POWERLEVEL9K_LOAD_WARNING_FOREGROUND='172'
POWERLEVEL9K_LOAD_CRITICAL_FOREGROUND='88'
POWERLEVEL9K_LOAD_NORMAL_BACKGROUND='clear'
POWERLEVEL9K_LOAD_WARNING_BACKGROUND='clear'
POWERLEVEL9K_LOAD_CRITICAL_BACKGROUND='clear'
POWERLEVEL9K_LOAD_NORMAL_VISUAL_IDENTIFIER_COLOR='239'
POWERLEVEL9K_LOAD_WARNING_VISUAL_IDENTIFIER_COLOR='172'
POWERLEVEL9K_LOAD_CRITICAL_VISUAL_IDENTIFIER_COLOR='88'

# nvm
POWERLEVEL9K_NVM_FOREGROUND='239'
POWERLEVEL9K_NVM_BACKGROUND='clear'

# time icon
POWERLEVEL9K_TIME_ICON=''
POWERLEVEL9K_TIME_FOREGROUND='66'
POWERLEVEL9K_TIME_BACKGROUND='clear'

# >>> left segment >>>
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_VCS_GIT_HOOKS=(vcs-detect-changes git-untracked git-aheadbehind git-remotebranch git-tagname)
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(dir custom_git_pair vcs)

# <<< right segment <<<
POWERLEVEL9K_RIGHT_SEGMENT_SEPARATOR=''
POWERLEVEL9K_RIGHT_SUBSEGMENT_SEPARATOR="%F{239}\uf6d8%F{239}"
POWERLEVEL9K_TIME_FORMAT="%F{239}%D{%H:%M \uf073  %d.%m.%y}"
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status command_execution_time nvm dir_writable time load)


